{
  "ConnectionStrings": {
    "Sqlite": "Data Source=app.db"
  },
  "Redis": {
    "Enabled": false,
    "ConnectionString": "localhost:6379"
  },
  "Kafka": {
    "BootstrapServers": "kafka:29092",
    "Topics": {
      "Movimentos": "movimentos.efetuados",
      "Transferencias": "transferencias.efetuadas",
      "Tarifas": "tarifas.cobradas"
    }
  },
  "Jwt": {
    "Issuer": "ContaCorrente",
    "Audience": "ContaCorrente",
    "Key": "mude-esta-chave-super-secreta-para-producao"
  },
  "Swagger": {
    "Enabled": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "ContaCorrente.Infrastructure.Messaging": "Debug",
      "ContaCorrente.Infrastructure.Services": "Debug"
    }
  },
  "AllowedHosts": "*"
